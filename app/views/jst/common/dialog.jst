<div class="dialog_background"></div>
<div class="title draggable gradient_light"><%= title %></div>
<% if (text) { %>
  <div class="text"><%= text %></div>
<% } %>
<% if (mode == 'custom') { %>
  <div class="custom"></div>
<% } %>
<% if( mode == 'prompt' || mode == 'short_prompt') { %>
  <div class="<%= mode %>">
    <% if( mode == 'prompt') { %>
      <textarea class="content"></textarea>
    <% } else { %>
      <div class="text_input small">
        <div class="background">
          <div class="inner">
            <input class="content" type="text" value="" />
          </div>
        </div>
      </div>
    <% } %>
  </div>
<% } %>
<div class="controls">
  <% if (buttons === "mini") { %>
    <div class="minibutton ok"><span>ok</span></div>
    <div class="minibutton cancel"><span>cancel</span></div>
  <% } else { %>
    <button class="ok default">ok</button>
    <button class="cancel">cancel</button>
  <% } %>
</div>