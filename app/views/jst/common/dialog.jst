<div class="dialog_background"></div>
<div class="title draggable"><%= title %></div>
<% if (text) { %>
  <div class="text"><%= text %></div>
<% } %>
<% if (mode == 'custom') { %>
  <div class="custom"></div>
<% } %>
<% if( mode == 'prompt' || mode == 'short_prompt') { %>
  <div class="<%= mode %>">
    <% if( mode == 'prompt') { %>
      <textarea class="text_area content"></textarea>
    <% } else if (choices) { %>
      <select class="content">
        <% _.each(choices, function(choice) { %>
          <option value="<%= choice.value %>" <%= choice.selected ? 'selected="true"' : '' %>><%= choice.text %></option>
        <% }); %>
      </select>
    <% } else { %>
      <div class="text_input dark">
        <input class="content" type="<%= password ? 'password' : 'text' %>" value="" />
      </div>
    <% } %>
  </div>
<% } %>
<div class="controls">
  <div class="controls_inner">
    <% var saveText = (mode == 'prompt' || mode == 'short_prompt') ? 'Save' : 'OK'; %>
    <div class="minibutton ok default"><span><%= saveText %></span></div>
    <div class="minibutton cancel dark"><span>Cancel</span></div>
  </div>
</div>