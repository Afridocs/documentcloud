<div class="tweet <%= index == 1 ? 'right' : '' %>">
  <div class="bird"></div>
  <div class="content">
    <div class="text">
      &ldquo;<%= Inflector.autolink(text, true) %>&rdquo;
    </div>
    <div class="user sans">
      &mdash; <a class="name" href="http://twitter.com/<%= user.screen_name %>"><%= user.name %></a>
    </div>
  </div>
</div>