<% if @current_account %>
  <%= include_stylesheets :ui %>
  <%= include_stylesheets :viewer_editing %>
  <!--[if lt IE 9]>
    <%= include_stylesheets :ie_only, :embed_assets => false %>
  <![endif]-->
  <%= include_javascripts :core %>
  <%= include_javascripts :editor %>
  <% if Rails.env.development? %>
    <script src="/javascripts/lib/debug.js" type="text/javascript"></script>
  <% end %>
<% end %>

<script type="text/javascript">
  DV.jQuery(function() {
    <% if @current_account %>
      var docId = <%= @current_document.id %>;
      var isOwner = <%= @current_account.allowed_to_edit?(@current_document) %>;
      <%= render :partial => 'accounts/current_account.js', :type => :js %>
      dc.app.editor.initialize(docId, isOwner);
    <% end %>
    currentDocument.$('.DV-logoLink, .DV-footerLogoLink').attr({
      href  : 'http://www.documentcloud.org',
      title : 'DocumentCloud'
    });
    var contributor = currentDocument.api.getContributor();
    var org = currentDocument.api.getContributorOrganization();
    if (contributor && org) {
      currentDocument.$('.DV-contributor').text("Contributed by: " + contributor + ', ' + org);
    }
  });
</script>
