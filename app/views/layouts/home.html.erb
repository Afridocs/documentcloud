<!DOCTYPE html>

<html lang="en">
<head>
  <%= render :partial => 'common/meta_tags' %>
  <title><%= @title ? "#{@title} - " : '' %>DocumentCloud</title>
  <%= include_stylesheets :ui, :home %>
  <% if Rails.env.development? %>
    <script src="/javascripts/vendor/jquery-1.4.2.js" type="text/javascript"></script>
    <script src="/javascripts/lib/debug.js" type="text/javascript"></script>
  <% end %>
  <%= include_javascripts :core, :home %>
  <% if Rails.env.production? %>
    <%= render :partial => 'common/google' %>
  <% end %>
</head>
<body class="<%= @bodyclass %>">

  <div id="grid"></div>
  <div id="overlay"></div>

  <%= render :partial => 'nav' %>

  <div id="sky"></div>

  <% if @bodyclass == 'homepage' %>
    <a id="workspace_link" href="/public/#search/"></a>
    <div id="docs_wrapper">
      <img id="document_stack" alt="" src="/images/home/art.png" />
      <a id="featured_document" target="_blank" href="<%= @documents.first.canonical_url(:html) %>">
        <img width="212" height="276" src="<%= @documents.first.page_image_url(1, 'normal') %>" />
      </a>
    </div>
  <% else %>
    <a id="logo" href="/"><img src="/images/home/logo.png" alt="DocumentCloud" /></a>
  <% end %>

  <% if @header %>
    <h1><%= @header %></h1>
  <% end %>

  <div id="container">
    <%= render :partial => 'sidebar' %>
    <%= yield %>
    <br class="clear" />
  </div>

  <%= render :partial => 'footer' %>

</body>
</html>
