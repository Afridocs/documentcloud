<script type="text/javascript">
window.RAILS_ENV = '<%= RAILS_ENV %>';
window.SERVER_ROOT = '<%= DC.server_root %>';
<% if @current_account %>
  dc.account = {
    id            : <%= @current_account.id %>,
    hasDocuments  : <%= @has_documents.to_json %>,
    organization  : <%= @current_organization.to_json %>
  };
  Accounts.refresh(<%= @accounts.contributors.to_json %>);
  Projects.refresh(<%= @projects.to_json({:account => @current_account}) %>);
<% end %>
<% if @additional_js %>
  <%= @additional_js %>
<% end %>
</script>
