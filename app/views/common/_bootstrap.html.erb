<script type="text/javascript">
window.RAILS_ENV = '<%= RAILS_ENV %>';
window.SERVER_ROOT = '<%= DC.server_root %>';
<% if @current_account %>
  dc.app.sessionId    = '<%= request.session_options[:id] %>';
  dc.app.hasDocuments = <%= @has_documents.to_json %>;
  dc.app.organization = <%= @current_organization.to_json %>;
  dc.app.accountId    = <%= @current_account.id %>;
  Accounts.add(new dc.model.Account(<%= @current_account.to_json %>));
  Projects.refresh(<%= @projects.to_json({:account => @current_account}) %>);
<% end %>
<% if @additional_js %>
  <%= @additional_js %>
<% end %>
</script>
