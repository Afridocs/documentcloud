<%
  @bodyclass = 'search'
%>

<form id="search_form" method="get" action="/results/">
  <img id="logo" src="/images/common/document_cloud_logo_large.png" alt="DocumentCloud" />

  <div id="search_container">
    <input id="search" name="search" type="search" size="43" placeholder="search documents..." autosave="documentcloud" results="10" title="DocumentCloud Search" value="" />
  </div>

  <div id="quick_links">
    <a href="/login">Log In</a> &nbsp;-&nbsp;
    <a href="/signup">Sign Up</a> &nbsp;-&nbsp;
    <a href="http://documentcloud.org">About DocumentCloud</a>
  </div>
</form>

<script type="text/javascript">
  $('#search_form').bind('submit', function(e) {
    var query = dc.app.searchBox.value();
    window.location = "/results/#search/" + encodeURIComponent(query);
    return false;
  });
</script>