<%
  @title      = "Login"
  @bodyclass  = "full_screen_form"
%>

<div id="full_screen_form">
  <form action="/login" method="POST">
    <% if @failure %>
      <div class="form_error login_error">
        <span>
          Incorrect email address or password.
        </span>
      </div>
    <% end %>
    <div class="line">
      <span class="text_input"><span><input type="text" name="email" id="account_email" /></span></span>
      <label for="account_email">
        Email Address:<br /><span class="example"><a href="/signup">Need an Account?</a></span>
      </label>
    </div>
    <div class="line">
      <span class="text_input"><span><input type="password" name="password" id="account_password" /></span></span>
      <label for="account_password">
        Password:<br /><span class="example"><a href="#">Forgot your Password?</a></span>
      </label>
    </div>
    <div class="line">
      <button class="default">Log in</button>
    </div>
  </form>
</div>

<script type="text/javascript">
  $('#account_email').focus();
</script>