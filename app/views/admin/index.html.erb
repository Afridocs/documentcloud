<%
  @title = "Admin Dashboard"
  @stylesheets = [:admin]
  @javascripts = [:admin]
  @bodyclass   = 'admin'
%>

<script type="text/javascript">
  window.CLOUD_CROWD_SERVER   = "<%= DC_CONFIG['cloud_crowd_server'] %>";

  window.stats = {};
  stats.documents_by_access   = <%= @documents_by_access  %>;
  stats.average_entity_count  = <%= @average_entity_count %>;
  stats.average_page_count    = <%= @average_page_count   %>;
  stats.daily_documents       = <%= @daily_documents      %>;
  stats.daily_pages           = <%= @daily_pages          %>;
  stats.total_pages           = <%= @total_pages          %>;
  stats.public_per_account    = <%= @public_per_account   %>;
  stats.private_per_account   = <%= @private_per_account  %>;
  stats.pages_per_account     = <%= @pages_per_account    %>;
  stats.instances             = <%= @instances %>;

  Accounts.populate(<%= @accounts %>);
  Organizations.populate(<%= @organizations %>);

  $(function(){
    $('#content').append((new dc.ui.Statistics()).render().el);
  });
</script>

