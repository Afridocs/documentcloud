<%
  @title = "Admin Dashboard"
  @stylesheets = [:admin]
  @javascripts = [:admin]
  @bodyclass   = 'admin'
%>

<script type="text/javascript">
  window.CLOUD_CROWD_SERVER   = "<%= DC_CONFIG['cloud_crowd_server'] %>";
  window.TopDocuments         = new dc.model.DocumentSet();
  window.FailedDocuments      = new dc.model.DocumentSet();

  window.stats = {};
  stats.documents_by_access           = <%= @documents_by_access  %>;
  stats.pages_per_minute              = <%= @pages_per_minute     %>;
  stats.average_page_count            = <%= @average_page_count   %>;
  stats.daily_documents               = <%= @daily_documents      %>;
  stats.daily_pages                   = <%= @daily_pages          %>;
  stats.total_pages                   = <%= @total_pages          %>;
  stats.public_per_account            = <%= @public_per_account   %>;
  stats.private_per_account           = <%= @private_per_account  %>;
  stats.pages_per_account             = <%= @pages_per_account    %>;
  stats.instances                     = <%= @instances %>;
  stats.remote_url_hits_last_week     = <%= @remote_url_hits_last_week %>;
  stats.remote_url_hits_last_year     = <%= @remote_url_hits_last_year %>;
  stats.count_organizations_embedding = <%= @count_organizations_embedding %>;
  stats.count_total_collaborators     = <%= @count_total_collaborators %>;


  Accounts.populate(<%= @accounts %>);
  Organizations.populate(<%= @organizations %>);
  Documents.populate(<%= @documents %>);
  TopDocuments.populate(<%= @top_documents %>);
  FailedDocuments.populate(<%= @failed_documents %>);
  
  $(function(){
    $('#content').append((new dc.ui.Statistics()).render().el);
  });
</script>

