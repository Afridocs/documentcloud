<div id="sidebar" class="sans">

  <%= render :partial => 'help_navigation' if @nav == 'guide' %>

  <div id="search_wrapper" class="sidebar_section">
    <div id="search_desc">
      Search thousands of public documents<br />
      from newsrooms across the country:
    </div>
    <div id="search_box_wrapper" class="text_input search noselect">
      <div class="icon search_glyph"></div>
      <div class="search_inner">
        <input placeholder="Search..." id="search_box" />
      </div>
      <div class="icon cancel_search" title="clear search"></div>
    </div>
  </div>

  <% if @current_account %>
  
    <div class="sidebar_section">
      Welcome, <%= @current_account.full_name %>. You're already logged in to DocumentCloud.
      <a href="/"><span class="minibutton default">Enter the Workspace</span></a>
    </div>
    
  <% else %>
  
    <div id="join" class="sidebar_section">
      DocumentCloud is a tool for journalists.<br />
      If you're regularly working with primary source documents, we can help.
      <a href="/contact"><span class="minibutton default">Join DocumentCloud</span></a>
    </div>
  
    <div class="sidebar_section">
      <% if flash[:error] %>
        <div class="error">
          Invalid email or password.
          <br />
          <a href="/reset_password">Forgot your password?</a>
        </div>
      <% end %>
      <form id="login_form" action="<%= DC.server_root(:ssl => true) %>/login" method="POST">
        <div class="text_input first light">
          <div class="inner">
           <input type="text" name="email" placeholder="Email" id="account_email" />
          </div>
        </div>
        <div class="text_input light">
          <div class="inner">
            <input type="password" name="password" placeholder="Password" id="account_password" />
          </div>
        </div>
        <span class="minibutton" id="login_button">Log in</span>
        <input type="submit" class="hidden_submit" />
      </form>
    </div>
    
  <% end %>

  <div id="news" class="sidebar_section">
    <div class="section_title">
      About the Project
    </div>
    <ul>
      <li><a href="/featured">Featured Documents</a></li>
      <li><a href="/faq">Frequently Asked Questions</a></li>
      <li><a href="/about">Who We Are</a></li>
      <li><a href="/news">DocumentCloud in the News</a></li>
      <li><a href="/contact">Contact Information</a></li>
      <li><a href="/contributors">List of Contributing Organizations</a></li>
    </ul>
  </div>

  <div id="contact" class="sidebar_section">
    Questions, comments, or concerns?<br />
    Don't hesitate to get in touch.
    <span class="minibutton" id="contact_button">Contact Us</span>
  </div>

</div>
